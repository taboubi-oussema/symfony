{% extends 'base.html.twig' %}

{% block title %}Welcome to Tunisia Mall{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <div class="hero-section position-relative">
        <img src="{{ asset('images/home.jpg') }}" class="w-100" alt="Tunisia Mall">
        <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
            <h1 class="display-4 fw-bold">Welcome to Tunisia Mall</h1>
            <p></p>
            <a href="{{ path('app_shop') }}" class="btn btn-primary btn-lg">Shop Now</a>
        </div>
    </div>

    <!-- Featured Categories -->
    <div class="container py-5">
        <h2 class="text-center mb-4">Shop by Boutique</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <a href="{{ path('app_shop', {'boutique': 'zara'}) }}" class="text-decoration-none">
                    <div class="card category-card h-100">
                        <img src="{{ asset('images/zara.jpg') }}" class="card-img-top" alt="Zara">
                        <div class="card-body text-center">
                            <h3 class="card-title">Zara</h3>
                            <p class="card-text">Discover the latest fashion trends</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="{{ path('app_shop', {'boutique': 'peak'}) }}" class="text-decoration-none">
                    <div class="card category-card h-100">
                        <img src="{{ asset('images/peak.png') }}" class="card-img-top" alt="Peak">
                        <div class="card-body text-center">
                            <h3 class="card-title">Peak</h3>
                            <p class="card-text">Premium sports and casual wear</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="{{ path('app_shop', {'boutique': 'bershka'}) }}" class="text-decoration-none">
                    <div class="card category-card h-100">
                        <img src="{{ asset('images/bershka.jpg') }}" class="card-img-top" alt="Bershka">
                        <div class="card-body text-center">
                            <h3 class="card-title">Bershka</h3>
                            <p class="card-text">Trendy and affordable fashion</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- Featured Products -->
    <div class="container py-5 bg-light">
        <h2 class="text-center mb-4">Featured Products</h2>
        <div class="row g-4">
            {% for product in featured_products %}
                <div class="col-md-3">
                    <div class="card product-card h-100">
                        <img src="{{ product.image }}" class="card-img-top" alt="{{ product.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 mb-0">${{ product.price|number_format(2) }}</span>
                                <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <style>
        .hero-section {
            height: 600px;
            overflow: hidden;
        }
        .hero-section img {
            object-fit: cover;
            height: 100%;
        }
        .category-card {
            transition: transform 0.3s;
            overflow: hidden;
        }
        .category-card:hover {
            transform: translateY(-10px);
        }
        .category-card img {
            height: 250px;
            object-fit: cover;
        }
        .product-card {
            transition: transform 0.3s;
        }
        .product-card:hover {
            transform: translateY(-5px);
        }
    </style>
{% endblock %}

