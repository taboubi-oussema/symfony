{% extends 'base.html.twig' %}

{% block title %}Shopping Cart - Tunisia Mall{% endblock %}

{% block body %}
    <div class="container py-4">
        <h1 class="mb-4">Shopping Cart</h1>

        {% if cartItems|length > 0 %}
            <div class="row">
                <!-- Cart Items -->
                <div class="col-md-8">
                    {% for item in cartItems %}
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                    </div>
                                    <div class="col-md-4">
                                        <h5 class="card-title mb-0">{{ item.name }}</h5>
                                    </div>
                                    <div class="col-md-2">
                                    </div>
                                    <div class="col-md-2 text-end">
                                        <span class="h5 mb-0">${{ (item.price)|number_format(2) }}</span>
                                    </div>
                                    <div class="col-md-2 text-end">
                                        <a href="{{ path('app_cart_remove', {id: item.id}) }}" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Order Summary -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Order Summary</h5>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal</span>
                                <span>${{ subtotal|number_format(2) }}</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Shipping</span>
                                <span>${{ shipping|number_format(2) }}</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tax (19%)</span>
                                <span>${{ tax|number_format(2) }}</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <span class="h5 mb-0">Total</span>
                                <span class="h5 mb-0">${{ total|number_format(2) }}</span>
                            </div>
                            <div class="d-grid">
                                <a href="{{ path('app_checkout',{id: panier.id}) }}" class="btn btn-primary btn-lg">
                                    Proceed to Checkout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                <h3>Your cart is empty</h3>
                <p class="text-muted">Add some items to your cart to continue shopping</p>
                <a href="{{ path('app_shop') }}" class="btn btn-primary">Continue Shopping</a>
            </div>
        {% endif %}
    </div>
{% endblock %} 